<% layout('./layout/page.ejs') %>

<% if (error.status === 404) { %>
    <div style="text-align: center;">
      <h1><%= title %></h1>
      <img src="/images/error.jpg" alt="Page Not Found" style="max-width: 720px; height: 560px;">
      <h2>Oops! Page Not Found</h2>
      <p>The page you're looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
    </div>
  <% } else { %>
    <h2>Error <%= error.status %></h2>
    <pre><%= error.stack %></pre>
  <% } %>